                android:textColor="@color/grayDark"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/txt_diterima_status_transaksi"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="Diterima"
                android:textColor="@color/grayDark"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/txt_dibatalkan_status_transaksi"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="Dibatalkan"
                android:textColor="@color/grayDark"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/txt_tukar_status_transaksi"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="Tukar"
                android:textColor="@color/grayDark"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/txt_dikembalikan_status_transaksi"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="Dikembalikan"
                android:textColor="@color/grayDark"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textSize="20sp"/>

        </LinearLayout>

    </ScrollView>

